{% extends 'base.html.twig' %}

{% block title %}Utilisteurs | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Utilisteurs</h1>

    <table class="table">
        <thead>
            <tr class="table-active">
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Campus</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr class="table-secondary">
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.campus.nom }}</td>
                <td>
                    {% if participant.id == app.user.id %}
                        <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>
                    {% else %}
                        <a href="{{ path('app_participant_show', {'id': participant.id}) }}">show</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_sortie_index') }}">Accueil Sorties</a>
{% endblock %}
