{% extends 'base.html.twig' %}

{% block title %}Liste lieux | {{  parent() }}{% endblock %}

{% block body %}
    <h1>Liste lieux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Rue</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.rue }}</td>
                <td>{{ lieu.latitude }}</td>
                <td>{{ lieu.longitude }}</td>
                <td>
                    <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">modifier</a>
                    -
                    <a href="{{ path('app_lieu_delete', {'id': lieu.id}) }}">supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Echec d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lieu_new') }}">Cr√©er un nouveau lieu</a>
{% endblock %}
