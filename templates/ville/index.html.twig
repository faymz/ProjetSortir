{% extends 'base.html.twig' %}

{% block title %}Ville | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Liste des villes </h1>

    <div id="showVille">
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>CodePostal</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nom }}</td>
                    <td>{{ ville.codePostal }}</td>
                    <td>
                        <a href="{{ path('app_ville_edit', {'id': ville.id}) }}">modifier</a>
                        -
                        <a href="{{ path('app_ville_delete', {'id': ville.id}) }}">supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Echec d'enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div id="btnCreer">
        <a type="button" class="btn btn-primary" href="{{ path('app_ville_new') }}">Cr√©er une nouvelle ville</a>
    </div>
{% endblock %}
