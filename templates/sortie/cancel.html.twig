{% extends 'base.html.twig' %}

{% block title %}Annuler sortie | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Annuler une sortie</h1>

    <div>
        <table class="table-sm">
            <tbody>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <td>{{ sortie.nom }}</td>
                <th scope="col">Date de la sortie</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>

            </tr>
            </tbody>
        </table>
    </div>
    <div>
        <Label>Campus : </Label>
        {{ sortie.organisateur.campus.nom }}
    </div>
    <div>
        <Label>Lieu : </Label>
        {{ sortie.lieu.nom }}
    </div>

    {{ form_start(formCancel) }}
    <div>
        {{ form_row(formCancel.motifAnnulation) }}
    </div>

    <div>
        <button class="btn" >{{ button_label|default('Enregistrer') }}</button>
        <button class="btn" onclick="document.location='{{ path('app_sortie_index') }}'">{{ button_label|default('Annuler') }}</button>
    </div>
    {{ form_end(formCancel) }}


{% endblock %}



